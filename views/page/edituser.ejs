<%- include("../partials/_adminheader") -%>
    <div class="container">
        <form action="/edituser/<%= task.User_ID %>" method="post">
            <div class="row justify-content-center mt-3 ">
                <div class="col-12 col-md-6 col-lg-6">
                    <label for="">Email :</label>
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-12 col-md-6 col-lg-6">
                    <input type="email" name="Email" class="form-control" value="<%= task.Email%>" id="">
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-12 col-md-6 col-lg-6">
                    <label for="">Password :</label>
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-12 col-md-6 col-lg-6">
                    <input type="password" name="Password" class="form-control" value="<%= task.Password%>" id="">
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-12 col-md-6 col-lg-6">
                    <label for="">Phoenumber :</label>
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-12 col-md-6 col-lg-6">
                    <input type="text" name="Phonenumber" class="form-control" value="<%= task.Phonenumber%>" id="">
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-12 col-md-6 col-lg-6">
                    <label for="">Address :</label>
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-12 col-md-6 col-lg-6">
                    <input type="text" name="Address" class="form-control" value="<%= task.Address%>" id="">
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-6 col-md-4 col-lg-4">
                    <button type="submit" class="form-control btn btn-success">Update</button>
                </div>
            </div>
        </form>
    </div>
    <%- include("../partials/_footer") -%>